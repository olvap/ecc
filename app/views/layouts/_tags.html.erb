<%= link_to_function "Imprimir", "window.print()", id: "printButton", class: "button small" %>
<div id="printable-tag">
  <div class="row">
    <% @people.each do |person| %>
        <div class="tag">
          <div><%= image_tag("hearts.png") %></div>
          <p><%= person.husband_full_name %></p>
        </div>
        <div class="tag">
          <div><%= image_tag("hearts.png") %></div>
          <p><%= person.wife_full_name %></p>
        </div>
    <% end %>
  </div>
</div>