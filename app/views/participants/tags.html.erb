<input type="button" value="Imprimir" onclick="window.print()" id="printButton"/>
<div id="printable-tag">
  <div class="row">
    <% @participants.each do |participant| %>
        <div class="tag">
          <div><%= image_tag("hearts.png") %></div>
          <p><%= participant.name %></p>
        </div>
        <div class="tag">
          <div><%= image_tag("hearts.png") %></div>
          <p><%= participant.wife_name %></p>
        </div>
    <% end %>
  </div>
</div>